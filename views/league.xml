<odoo>
    <data>mi_modelo
      <record id="laliga-odoo_league_tree" model="ir.ui.view">
        <field name="name">laliga-odoo.league.tree</field>
        <field name="model">laliga-odoo.league</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="country"/>
            </tree>
        </field>
      </record>

      <record id="laliga-odoo_league_form" model="ir.ui.view">
        <field name="name">laliga-odoo.league.form</field>
        <field name="model">laliga-odoo.league</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="name"/>
                            <field name="teams"/>
                        </group>
                        <group name="group_right">
                          <field name="country" />
                          <!--<field name="img" />-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
      </record>
    </data>
</odoo>